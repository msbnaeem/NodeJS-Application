<%- include('../partials/header.ejs')%>

<main class="connectionMain">
  <div class="container13153">

    <article class="titAndBut3153">
      <h4><%= connection.title %></h4>
      <div>
        <% if(user == connection.host._id){%>

          <form class="buttons3153" action="connections.ejs" method="post">
            <button type="submit" formmethod = "GET" formaction="/connections/<%=connection.id%>/edit">Edit</button>
            <button type="submit" formmethod = "POST" formaction="/connections/<%=connection.id%>?_method=Delete">Delete</button>
          </form>
        <%}%>
      </div>
    </article>

    <div class="firstDivConnectionMain">
      <div class="image1">
        <img src="<%= connection.image %>" class="images" alt="image">
      </div>

        <div class="div3153">
          <ul>
            <li><h3>Hosted by <%=connection.host.firstName + ' ' + connection.host.lastName%></h3></li>
            <li><%=connection.date%></li>
            <li><%=connection.startTime%> - <%=connection.endTime%></li> <br>
            <li><%=connection.location%></li>
          </ul>
        </div>
    </div>
    <h4 class="details3153">Details</h4>
    <div><%=connection.details%></div>    
  </div>
</main>
